<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="corner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="teamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:textColor">#ECB850</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="score">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">130dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">65sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#916100</item>

    </style>

    <style name="possessionText">
        <item name="android:textColor">#ECB850</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="button">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="footballbutton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
